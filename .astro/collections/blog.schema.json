{
	"$ref": "#/definitions/blog",
	"definitions": {
		"blog": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"description": {
					"type": "string"
				},
				"publishedAt": {
					"anyOf": [
						{
							"type": "string",
							"format": "date-time"
						},
						{
							"type": "string",
							"format": "date"
						},
						{
							"type": "integer",
							"format": "unix-time"
						}
					]
				},
				"tags": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": []
				},
				"readingMinutes": {
					"type": "number"
				},
				"$schema": {
					"type": "string"
				}
			},
			"required": ["title", "description", "publishedAt"],
			"additionalProperties": false
		}
	},
	"$schema": "http://json-schema.org/draft-07/schema#"
}
